FROM ubuntu:16.04

ENV IROHA_HOME /opt/iroha
ENV IROHA_BUILD /opt/iroha/build

COPY iroha.deb /tmp/iroha.deb
RUN apt-get update

RUN apt-get install libc-ares-dev -y

#Install iroha
RUN dpkg -i /tmp/iroha.deb || true //continue executing even if command fails

#Install iroha dependecies
RUN apt-get install -y -f

#Insall iroha again
RUN dpkg -i /tmp/iroha.deb